{
  "manifest_version": 2,

  "name": "MyLingva - improve your vocabulary",
  "description": "Helps you learn and retain new words in different languages.",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": [
      "libs/jquery.js",
      "common/models.js",
      "host/analytics.js",
      "host/localdb.js",
      "host/main.js"
    ]
  },

  "web_accessible_resources": [
    "icons/langs/*.svg",
    "page/menu.html",
    "page/resources/*.png"
  ],

  "options_page": "host/ui/options.html",
  "options_ui": {
    "page": "host/ui/options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icons/main32.png"
  },

  "icons": {
    "16": "icons/main16.png",
    "48": "icons/main48.png",
    "32": "icons/main32.png",
    "64": "icons/main64.png",
    "128": "icons/main128.png"
  },

  "commands": {
  },

  "permissions": [
  ],

  "optional_permissions": [
    "tabs",
    "https://*/",
    "http://*/"
  ],

  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}